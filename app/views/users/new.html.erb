<h1>Sign me up!</h1>

<%=form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>Fix the <%= pluralize(@user.errors.count, "error") %> below</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
  		<% end %>
  <% end %>

	<div class="field">
		<%=f.label :name %><br>
		<%=f.text_field :name %>
	</div>

	<div class="field">
		<%=f.label :email %><br>
		<%=f.text_field :email %>
	</div>

	<div class="field">
		<%=f.label :password %><br>
		<%=f.password_field :password %>
	</div>

	<div class="field">
		<%=f.label :password_confirmation %><br>
		<%=f.password_field :password_confirmation %>
	</div>

<%= f.submit value="Chea!" %>

<% end %>
